#declare potential evaluator for cartesian-like potentials
PotentialEvaluator = Template("DynamicPotentialEvaluator", "potential.cpp")

#Kinetic Energy Potentials
PotentialEvaluator("KineticEnergyPotential<1> 1","KineticEnergyPotential_1")
PotentialEvaluator("KineticEnergyPotential<2> 2","KineticEnergyPotential_2")

#Length Gauge Laser
PotentialEvaluator("DipoleLaserPotentialLength<2> 2","DipoleLaserPotentialLength_2")

#Helium soft Coulomb potential
PotentialEvaluator("SoftCoulombPotential<2> 2","SoftCoulombPotential_2")

#1D soft Coulomb potential
PotentialEvaluator("SoftCoulombPotential1D<1> 1","SoftCoulombPotential1D_1")

#Two-electron correlation
PotentialEvaluator("TwoElectronCorrelation1D<2> 2","TwoElectronCorrelation1D_2")

#1D laser potentail
PotentialEvaluator("DipoleLaserPotentialLength1D<1> 1","DipoleLaserPotentialLength_1")
